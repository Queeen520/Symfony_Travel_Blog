{% extends 'base.html.twig' %} {% block body %}
<div class="container d-flex mt-4">
  <div class="row row-cols-3 g-2">
    {% for entry in entries %}
    <div class="card">
      <img src="../../public/img/" class="card-img-top" alt="image" />
      <div class="card-body">
        <h5 class="card-title">{{ entry.headline }}</h5>
        <p class="card-text">
          {{ entry.story }}
        </p>
        <a href="/update/{{ entry.id }}" class="btn btn-outline-warning"
          >Update</a
        >
        <a href="/details/{{ entry.id }}" class="btn btn-outline-info"
          >Details</a
        >
        <a href="/delete/{{ entry.id }}" class="btn btn-outline-danger"
          >Delete</a
        >
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
